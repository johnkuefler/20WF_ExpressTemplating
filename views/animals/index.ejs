<!DOCTYPE html>
<html>
<%- include('../partials/header', {title: 'Home Page'}); %>

<body>
  <% include ../partials/navbar %>

  <div class="container">
   <h1>Animals</h1>

   <a href="/animals/create" class="btn btn-primary">+ Create Animal</a>

   <table class="table table-bordered table-striped">
     <% for(var i=0; i < data.length; i++) { %>
        <tr>
         <td><%=data[i].species%></td>
         <td><%=data[i].nickName%></td>
         <td><%=data[i].enabled%></td>
         <td><a href="/animals/update?id=<%= data[i]._id %>">Update</a> | 
          <a href="/animals/delete?id=<%= data[i]._id %>">Delete</a></td>
        </tr>
     <% } %>
     </table>
  </div>
  
  <% include ../partials/scripts %>
</body>

</html>